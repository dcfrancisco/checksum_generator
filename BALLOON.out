C6 100 'Balloon Crazy for IBM PC/PCjr requires BASICA, Color Graphics Adapter, and one joystick
18 110 DEFINT A-Z:RANDOMIZE TIMER:DIM BP$(3),MOBJ(452),X(49),Y(49)
AB 120 DF=10:' change df to a smaller number for a greater challenge
25 125 IF INKEY$="" AND STRIG(0)=-1 THEN PRINT "Please connect joystick":STOP
DB 130 SCREEN 1:COLOR 9,0:KEY OFF:STRIG ON::PLAY "mf":CLS
03 140 GOSUB 280:X=100:HP=164:EY=Y+22
CA 150 TX=3:LX=134:SKEW!=2.27:SP!=4:LIVES=4
D5 160 GOSUB 740:PRINT "BALLOON C R A Z Y !":LOCATE 9,10:PRINT "/":LOCATE 8,11: PRINT "Do you need":LOCATE 9,11:PRINT "to adjust":LOCATE 10,11:PRINT "your joystick?":WHILE INKEY$<>"":WEND
CB 170 A$=INKEY$:IF A$="" AND STRIG(1)=0 THEN 170 ELSE IF (ASC(A$+CHR$(0)) OR 32)=121 THEN GOSUB 600
1E 180 CLS:PRINT "BALLON C R A Z Y !":LOCATE 1,25:PRINT "Score:";SC!
68 190 FOR I=158 TO 158+(LIVES+1)*8 STEP 8:PUT(I,0),TINY:NEXT:GOSUB 350
14 200 FOR ROW=20 TO 80 STEP 20:FOR COL=45 TO 255 STEP 15:PUT(COL,ROW),BALL:NEXT COL,ROW
D9 210 PUT(X, Y),MAN:GET(X,Y)-(X+21,EY),MOBJ
A2 220 IF BP<0 THEN GOSUB 380:GOTO 180 ELSE BY=BP*20+20:T$=BP$(BP):PTR=.5+RND(1)*LEN(T$):BX=(ASC(MID$(T$,PTR))-64)*15+30:T$=LEFT$(T$,PTR-1)+MID$(T$,PTR+1):BP$(BP)=T$:IF T$="" THEN BP=BP-1
DE 230 PUT(BX,BY),BALL:BY=BY+SP!:PUT(BX,BY),BALL:IF BY>180 THEN 440
03 240 IF ABS(BY-HP)<SP! THEN IF ABS((BX-7)-X)<DF THEN Y=Y-13:PUT(BX,BY),BALL:PUT(X+7,Y),BALL,PSET:SOUND 30000,1:GET(X,Y)-(X+21,EY),MOBJ:HP=HP-13:FLOATERS=FLOATERS+1:SP!=SP!+.5:IF FLOATERS=7-BP THEN GOSUB 380:GOTO 210 ELSE 220
F2 250 PUT(X,Y),MOBJ:NX=(STICK(0)-TX)*SKEW!:X=NX:IF NX<0 THEN X=0 ELSE IF NX>297 THEN X=297
40 260 PUT(X,Y),MOBJ
B4 270 GOTO 230
C9 280 READ XS,YS:PRINT "XS: ";HEX$(XS):PRINT "YS:";HEX$(YS):E=(4+INT((XS+7)/8)*YS)/2:DIM MAN(E):MAN(0)=XS:MAN(1)=YS:FOR I=2 TO E:READ MAN(I):NEXT:Y=200-YS:MY=Y
65 290 READ XS,YS:PRINT "XS: ";HEX$(XS):PRINT "YS:";HEX$(YS):E=(4+INT((XS+7)/8)*YS)/2:DIM POP(E):POP(0)=XS:POP(1)=YS:FOR I=2 TO E:READ POP(I):NEXT
1D 300 READ XS,YS:PRINT "XS: ";HEX$(XS):PRINT "YS:";HEX$(YS):E=(4+INT((XS+7)/8)*YS)/2:DIM FALL(E):FALL(0)=XS:FALL(1)=YS:FOR I=2 TO E:READ FALL(I):NEXT
0E 310 READ XS,YS:PRINT "XS: ";HEX$(XS):PRINT "YS:";HEX$(YS):E=(4+INT((XS+7)/8)*YS)/2:DIM BALL(E):BALL(0)=XS:BALL(1)=YS:FOR I=2 TO E:READ BALL(I):NEXT
6F 320 READ XS,YS:PRINT "XS: ";HEX$(XS):PRINT "YS:";HEX$(YS):E=(4+INT((XS+7)/8)*YS)/2:DIM XBALL(E):XBALL(0)=XS:XBALL(1)=YS:FOR I=2 TO E:READ XBALL(I):NEXT
B4 330 READ XS,YS:PRINT "XS: ";HEX$(XS):PRINT "YS:";HEX$(YS):E=(4+INT((XS+7)/8)*YS)/2:DIM TINY(E):TINY(0)=XS:TINY(1)=YS:FOR I=2 TO E:READ TINY(I):NEXT
A4 340 RETURN
EF 350 BP=3:FOR I=0 TO BP:BP$(I)="ABCDEFGHIJKLMNO":NEXT
A6 360 RETURN
29 370 GOSUB 380:GOTO 220
09 380 FOR I = 1 TO FLOATERS
33 390 PUT(X,MY),POP,PSET:PUT(X+7,MY-13),BALL:PUT(X+7,MY-18),XBALL:FOR J=0 TO 5:SOUND 100+J,.5:NEXT:PUT(X+7,MY-18),XBALL
7C 400 IF I<FLOATERS THEN PUT(X+7,Y),BALL:PUT(X+7,MY-13),BALL
50 410 PUT(X,MY),MAN,PSET:FOR W=1 TO 5:NEXT:SC!=SC!+10:LOCATE 1,31:PRINT SC!:Y=Y+13:NEXT
32 420 Y=MY:GET(X,Y)-(X+21,EY),MOBJ:PUT(X,Y),MAN
D4 430 SP1=4:HP=164:FLOATERS=0:RETURN
8B 440 PUT(BX,BY),BALL:PUT(BX,BY-5),XBALL:FOR J=0 TO 5:SOUND 105-J,.5:NEXT:PUT(BX,BY-5),XBALL
3B 450 PUT(X,MY),MAN:PUT(X,MY),FALL
48 460 IF FLOATERS=0 THEN 510
C9 470 FOR I=1 TO FLOATERS
02 480 PUT(X+7,MY-13),BALL:PUT(X+7,MY-18),XBALL:FOR J=0 TO 5:SOUND 100+J,.5:NEXT:PUT(X+7,MY-18),XBALL
85 490 IF I<FLOATERS THEN PUT(X+7,Y),BALL:PUT(X+7,MY-13),BALL
50 500 FOR W=1 TO 5:NEXT:Y=Y+13:NEXT
D2 510 NY=MY:S=-6:F0R I=X+5 TO 291 STEP 5:PUT(I-5,NY),FALL:NY=NY+S:IF NY<MY-18 OR NY>MY THEN NY=NY-S:S=-S
C3 520 PUT(I,NY),FALL:SOUND 100+NY,.5:NEXT
52 530 NX=I-5:FOR I=NY-16 TO 0 STEP -16:PUT(NX,I),FALL:SOUND 100+I,.5:NEXT
08 540 PUT(NX,I+16),FALL
B9 550 LIVES=LIVES-1:PUT(150+LIVES*8,0),TINY:IF LIVES>0 THEN PUT(X,MY),MAN:GOSUB 420:GOTO 210
94 560 CLS:FOR I = 0 TO 49: X(I)=4+15*INT(20*RND(1)):PUT(X(I),Y(I)),BALL,PSET:NEXT
F4 570 FOR I=0 TO 49:PUT(X(I)-4,Y(I)),BALL,PSET:NEXT
F9 580 LOCATE 12,16: PRINT "GAME OVER":LOCATE 13,17-LEN((SC!))/2:PRINT "SCORE :";SC!:LOCATE 14,15:PRINT "Press Button"
15 590 A$=INKEY$:IF INKEY$="" AND STRIG(1)=0 THEN 590 ELSE RUN
FE 600 GOSUB 740
61 610 LOCATE 9,10:PRINT "/":LOCATE 8,11:PRINT "Move stick to": LOCATE 9,11:PRINT "far left,": LOCATE 10,11: PRINT "press button!"
9B 620 TX=STICK(0):IF STRIG(1)<>0 OR INKEY$="A" THEN 640
DB 630 FOR I=10 TO 0 STEP-1:C=-C*(C<3)+1:LINE (30+I,40)-(I,70),C:NEXT:GOTO 620
4D 640 PUT(50,63),POP,PSET:PUT(57,45),XBALL,PSET:FOR J=1 TO 15:SOUND 100+J,.5:NEXT
17 650 CLS:PUT(50,63),MAN:LOCATE 9,10:PRINT "/":LOCATE 8,11:PRINT "Move stick":LOCATE 9,11:PRINT "far right,":LOCATE 10,11:PRINT "press button!"
E6 660 FOR J=1 to 2000:NEXT
AF 670 PUT(57,0),BALL:FOR I=2 TO 50 STEP 2:WAIT &H3DA,8:PUT(57,I-2),BALL:NEXT
B6 680 LOCATE 8,11:PRINT"Move stick to ":LOCATE 9,11:PRINT"far left,":LOCATE 10,11:PRINT"press button!" 
AA 690 LX=STICK(0):IF STRIG(1)<>0 OR INKEY$="S" THEN 710
04 700 FOR I=10 TO 0 STEP-1:C=-C*(C<3)+1:LINE (289-I,40)-(319-I,70),C:LINE (289-I,100),C:NEXT:GOTO 690
A6 710 FOR I=1 TO 5:PUT(57,45),XBALL,PSET:PUT(50,63),POP,PSET:FOR J=1 TO 4:SOUND 100+J,.5:NEXT:PUT(57,50),BALL,PSET:PUT(50,63),MAN,PSET:FOR J=1 TO 100:NEXT:NEXT
D3 720 SKEW!=297/ABS(LX-TX)
A7 730 RETURN
62 740 CLS:PUT(0,63),MAN:PUT(57,0),BALL:FOR I=2 TO 50 STEP 2:PUT(57,I-2),BALL:PUT(57,I),BALL:PUT(I-2,63),MAN:PUT(I,63),MAN,PSET:NEXT:RETURN
